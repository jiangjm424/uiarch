<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#333333">

    <TextView
        android:id="@+id/title"
        style="@style/T21_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:textColor="#E65B2C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="弹窗标题" />

    <TextView
        android:id="@+id/sub_title"
        style="@style/T13_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textColor="#C8DEE2"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="子标题" />

    <RelativeLayout
        android:id="@+id/content_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub_title">

        <TextView
            android:id="@+id/content"
            style="@style/T15_Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:textColor="#C8DEE2"
            tools:text="adifjalskjdfasdfkl;asdjfkl;ajskldfjal;skdfjal;skjdfklas;djfakl;sdjfal;skdjfkl;asjdfl;askjdfkl;asjdfklasjdflkasjdfaklsf\n;laskdjfalskdjfa\nasl;dkfjaslkdfjaskldfj\nasdfjklasjfdklajsdfklajsdf" />

        <RelativeLayout
            android:id="@+id/custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:id="@+id/v_line_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#37464A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_lyt" />

    <TextView
        android:id="@+id/cancel"
        style="@style/T21_Regular"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="#E65B2C"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/v_line_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_line_horizontal"
        tools:visibility="visible" />

    <View
        android:id="@+id/v_line_vertical"
        android:layout_width="1dp"
        android:layout_height="56dp"
        android:background="#37464A"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/confirm"
        app:layout_constraintStart_toEndOf="@id/cancel"
        app:layout_constraintTop_toTopOf="@id/cancel"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/confirm"
        style="@style/T21_Regular"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="#E65B2C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_line_vertical"
        app:layout_constraintTop_toBottomOf="@id/v_line_horizontal"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>