<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="#33333333"
    android:padding="10dp">

    <ImageView
        android:id="@+id/homeItemHead"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="ContentDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/homeItemAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/secondary_text_light"
        tools:text="作者"
        app:layout_constraintStart_toEndOf="@id/homeItemHead"
        app:layout_constraintEnd_toStartOf="@id/homeItemDate"
        app:layout_constraintTop_toTopOf="@id/homeItemDate"/>

    <TextView
        android:id="@+id/homeItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/dp_10"
        android:textColor="@android:color/darker_gray"
        tools:ignore="RtlSymmetry"
        tools:text="日期"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/homeItemHead"/>

    <TextView
        android:id="@+id/homeItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_4"
        android:textColor="@android:color/primary_text_light"
        android:textSize="19sp"
        tools:text="标题"
        app:layout_constraintBottom_toTopOf="@id/homeItemHead"
        app:layout_constraintStart_toStartOf="@id/homeItemHead"
        app:layout_constraintTop_toBottomOf="@id/homeItemType"/>

    <TextView
        android:id="@+id/homeItemType"
        style="@style/T16_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/secondary_text_light"
        tools:text="类型"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeItemTitle"
        app:layout_constraintBottom_toBottomOf="@id/homeItemLike"/>

    <ImageView
        android:id="@+id/homeItemLike"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_action_no_like"
        tools:ignore="ContentDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/homeItemType"
        app:layout_constraintTop_toTopOf="@id/homeItemType"/>
</androidx.constraintlayout.widget.ConstraintLayout>
